!!! 5
%html
  %head
    %title
      Nag
    =stylesheet_link_tag "application", :media => "all"
    / %link{href: "/assets/application.css"}
   
    =csrf_meta_tags
    %meta{charset: "UTF-8"}
    %meta{content: "width=device-width", name: "viewport"}
  %body
    .container
      %header
        =link_to image_tag("naglogo.png", class: "site-logo"), root_url
        %nav#nav-wrap
          -if current_user
            .toolbar
              %ul#nav
                %li
                  =link_to "New Nag", new_nag_url
                %li
                  =link_to 'Settings', edit_user_url(current_user)
                %li
                  =link_to "Sign out", signout_url, id: "sign_out"
      %section.main
        =notice
        %br
        =yield
      %footer
        %section.utility-links
          %a{href: "#"} About
          %a{href: "#"} How it works
          %a{href: "#"} Contact
    / DO NOT ADD RAILS VERSIONS OF JS FILES IN HERE. WE WILL MINIFY INTO ONE FILE EVENTUALLY. WE WANT TO HIT THE GOOGLE CDNS, NOT LOCAL FILES
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}
    %script{src: "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js"}
    %script{src: "//ajax.aspnetcdn.com/ajax/jquery.validate/1.11.0/jquery.validate.min.js"}
    =javascript_include_tag "application"
