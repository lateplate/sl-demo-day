!!! 5
%html
  %head
    %title
      Nag
    =stylesheet_link_tag "application", :media => "all"
    =javascript_include_tag "application"
    =csrf_meta_tags
    %meta{charset: "UTF-8"}
    %meta{content: "width=device=width", name: "viewport"}
    / %link{href: "http://fonts.googleapis.com/css?family=Lato:400,700", media: "screen", rel: "stylesheet"}
  %body
    .title-bar
      %nav
        /%h1.site-title
        =link_to image_tag("naglogo.png", class: "site-logo"), root_url
          
        -if current_user
          %ul.toolbar
            %li.signed-in-username
              Signed in as
              =current_user.name
            %li
              =link_to "Sign out", signout_url, id: "sign_out"
              \/
            %li
              =link_to 'Dashboard', user_url(current_user)
              \/
            %li
              =link_to 'Settings', edit_user_url(current_user)
    .container
      =notice
      =yield
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"}  
    %script{src: "//ajax.googleapis.com/ajax/libs/jqueryui/1.10.1/jquery-ui.min.js"}  