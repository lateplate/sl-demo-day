%section
	.subnav
		%ul.filters
			%li
				=link_to "All", "#"
			%li
				=link_to "Overdue", "#"
			%li
				=link_to "Coming Up", "#"
			%li.new-nag
				=link_to "+ New Nag", new_nag_url, class: "btn-new"
	-unless @nags.blank?
		-current_user.nags.each do |nag|
			.nag
				.nag-image
					%img{:src => "/assets/ankur-patel.jpg", :alt => "Borrower Picture"}
				.nag-details
					%h2
						=link_to "#{nag.lendee_name} owes you #{nag.item}.", nag
					.due-date
						-if (nag.due_date + 1.second) - Time.now > 1.week
							.alert-box.success
						-else
							.alert-box.alert
								Due: #{nag.due_date}
	-else
		<h3>You have No Nags! Let us know what you've lent out recently</h3>
