.subnav
	%ul.filters
		%li
			=link_to "Outstanding", root_url(:filter => 'outstanding')
		/ %li
		/ 	=link_to "Overdue", root_url(:filter => 'overdue')
		/ %li
		/ 	=link_to "Coming Up", root_url(:filter => 'soon')
		%li
			=link_to "Completed", root_url(:filter => 'completed')
-unless @nags.blank?
	-@nags.each do |nag|
		.nag
			.checkbox
			.borrower-photo
				=image_tag "https://graph.facebook.com/#{nag.lendee_uid}/picture?width=100&height=100"
			.nag-details
				%h2
					=link_to "#{nag.lendee_name} owes you #{nag.item}", nag
				-if nag.due_date + 1.second > Time.now + 1.week
					.alert-box
						="Due: #{nag.due_date}"
				-else
					.alert-box-high-priority
						="Due: #{nag.due_date}"
-else
	-if params[:filter] == 'soon'
		%h4
			You don't have any items due in the next 2 weeks.
	-else
		%h4
			You have No Nags! Let us know what you've lent out recently
