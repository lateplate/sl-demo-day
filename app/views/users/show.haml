.subnav
	%ul.filters
		%li
			=link_to "Open", root_url(:filter => 'outstanding'), class: "active-filter"
		%li
			=link_to "Completed", root_url(id: current_user.id, :filter => 'completed'), class: ""
-unless @nags.blank?
	-@nags.each do |nag|
		.nag
			-if nag.completed?
				.checkbox.checked
			-else
				.checkbox 
			.borrower-photo
				=image_tag "https://graph.facebook.com/#{nag.lendee_uid}/picture?width=100&height=100"
			.nag-details
				-if nag.completed?
					%h2.nag-completed
						=link_to "#{nag.lendee_name} owes you #{nag.item}", nag
				-else
					%h2
						=link_to "#{nag.lendee_name} owes you #{nag.item}", nag
				-if nag.due_date.to_time > Time.now + 1.week
					.alert-box
						="Due: #{nag.due_date.strftime('%b %-d, %Y')}"
				-else
					.alert-box-high-priority
						="Due in #{((((nag.due_date.to_time - Time.now)/60)/60)/24).to_i} days"
						/ ="#{nag.due_date.to_time.strftime("Due in %u days!")}"

-else
	.nag
		%h2
			You've collected all your stuff. Congrats!
		%p
			If you've got more stuff out there, go ahead and
			=link_to "add a new nag.", new_nag_url
