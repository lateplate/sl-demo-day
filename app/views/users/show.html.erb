
<div class='twelve columns'>
	<dl class='sub-nav'>
		<dd class='active'>
			<a href='#'>
				All
			</a>
		</dd>
		<dd>
			<a href='#'>
				Overdue
			</a>
		</dd>
		<dd>
			<a href='#'>
				Coming Up
			</a>
		</dd>
	</dl>
	<%= link_to "+ New Nag", new_nag_url, class: 'button radius medium btn-new-item' %>
</div>
<br>
<% unless @nags.blank? %>
	<% current_user.nags.each do |nag| %>
	  <div class='row row-spacer'>
	    <div class='four columns'>
	        <%= link_to image_tag('http://placehold.it/350x200'), nag, class: 'th' %>
	    </div>
	    <div class='eight columns'>
	      <div>
	        <h2><%= link_to "#{nag.lendee_name} owes you #{nag.item}.", nag %></h2>
	      </div>
	      <div class='three columns due-date'>
	        <div class='alert-box success'>
	          Due: <%= "#{nag.due_date}" %>
	        </div>
	      </div>
	    </div>
	  </div>
	<% end %>
<% else %>
	<h3>You have No Nags! Let us know what you've lent out recently</h3>
<% end %>
